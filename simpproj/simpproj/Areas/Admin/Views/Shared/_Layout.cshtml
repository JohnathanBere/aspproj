
@helper SelectedTabClass(string tabName) { 
    if (tabName == ViewBag.SelectedTab)
    {
        @: active
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ads</title>
    @Styles.Render("~/styles/admin")
    @Scripts.Render("~/bundles/modernizer")
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body data-spy="scroll" data-target="nav">
    <header id="header-1" class="soft-scroll header-1">
            <!-- Navbar -->
            <nav class="main-nav navbar-fixed-top headroom headroom--pinned">
                <div class="container">
                    <!-- Brand and toggle -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a id="adminbrand" class="navbar-brand" href="@Url.RouteUrl("home")">Ads - Admin Mode</a>
                    </div>
                    <!-- Navigation -->
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <!-- Items -->
                            <li class="@SelectedTabClass("users")">
                                @Html.ActionLink("Users", "Index", "Users", new { area="admin"}, new {})
                            </li>

                            <li class="@SelectedTabClass("posts")">
                                @Html.ActionLink("Posts", "Index", "Posts", new { area = "admin" }, new { })
                            </li>

                            <li>
                                @Html.RouteLink("Back to website", "Home")
                            </li>
                        </ul>
                        <!--//nav-->
                    </div>
                    <!--// End Navigation -->
                </div>
                <!--// End Container -->
            </nav>
            <!--// End Navbar -->
        </header>

    <div id="admin-content">
        @RenderBody()
    </div>

    <div class="copyright-bar-2 bg-black">
        <div class="container text-center">
            <p>© COPYRIGHT 2016 - CarAds</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/scripts/admin")
    @RenderSection("Scripts", false)

    <form class="hidden" id="anti-forgery-form">
        @Html.AntiForgeryToken()
    </form>
</body>
</html>